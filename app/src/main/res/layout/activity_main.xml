<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        android:orientation="vertical"

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IP:" />

            <EditText
                android:id="@+id/ipEditText"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:text="192.168.1.100"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="port:" />

            <EditText
                android:id="@+id/portEditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="3000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/sendTcpTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="hello TCP!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/tcpConnectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="connectToTcpHost"
                android:text="连接" />

            <Button
                android:id="@+id/tcpSendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="sendTcpData"
                android:text="WIFI发送" />

            <Button
                android:id="@+id/disconnectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="disconnectToTcpHost"
                android:text="断开" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="gotoBlueDeviceListActivity"
                android:text="搜索蓝牙设备" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="closeBluetooth"
                android:text="关闭蓝牙" />

            <Button
                android:id="@+id/blueRecvSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="blueRecv"
                android:text="蓝牙接收" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/oneblueSendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="oneblueSend"
                android:text="一次测距" />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>